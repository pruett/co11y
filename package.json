{
  "name": "co11y",
  "version": "0.1.0",
  "private": true,
  "description": "Real-time monitoring dashboard for Claude Code activity",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"bun --filter '@co11y/backend' dev\" \"bun --filter '@co11y/frontend' dev\"",
    "build": "bun --filter './packages/*' build",
    "typecheck": "tsc --build",
    "test": "bun --filter './packages/*' test"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.1",
    "bun-types": "^1.3.5",
    "concurrently": "^9.2.1",
    "happy-dom": "^20.1.0",
    "typescript": "^5.7.2"
  }
}
